        type: string
        example: 'РќРѕРІР°СЏ'
      house:
        type: string
        example: '123'
      building:
        type: string
        example: '123'
      apartment:
        type: string
        example: '123'
      postal_code:
        type: string
        example: '12345'
      credit_limit:
        type: string
        example: '33000.00'
      missing_documents:
        type: 'array'
